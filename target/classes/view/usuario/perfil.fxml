<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.logistics.viewController.usuario.PerfilViewController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2563eb;">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Label text="Mi Perfil" style="-fx-text-fill: white;">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <left>
      <VBox minWidth="200.0" spacing="10.0" style="-fx-background-color: #1e293b;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Button fx:id="volverButton" maxWidth="1.7976931348623157E308" onAction="#onVolverClick" style="-fx-background-color: transparent; -fx-text-fill: white;" text="← Volver" />
         </children>
      </VBox>
   </left>
   <center>
      <VBox alignment="CENTER" maxWidth="600.0" spacing="20.0">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <Label text="Información Personal">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <GridPane hgap="15.0" vgap="15.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="Nombre:">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nombreField" prefWidth="300.0" GridPane.columnIndex="1" />
                  <Label text="Correo:" GridPane.rowIndex="1">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="correoField" editable="false" prefWidth="300.0" style="-fx-background-color: #f1f5f9; -fx-text-fill: #64748b;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="(El correo no se puede modificar)" style="-fx-text-fill: #94a3b8; -fx-font-size: 11px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Teléfono:" GridPane.rowIndex="3">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="telefonoField" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <Button fx:id="actualizarButton" maxWidth="1.7976931348623157E308" onAction="#onActualizarClick" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12px;" text="Actualizar Datos" />
         </children>
      </VBox>
   </center>
</BorderPane>

