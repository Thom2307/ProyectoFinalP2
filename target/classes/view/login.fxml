<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #2563eb, #1e40af);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.logistics.viewController.LoginViewController">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   <children>
      <Label text="Sistema de Logística" style="-fx-text-fill: white;">
         <font>
            <Font name="System Bold" size="32.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" maxWidth="400.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 15, 0, 0, 5);">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <Label text="Iniciar Sesión" style="-fx-text-fill: #1e293b;">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="correoField" prefHeight="45.0" promptText="Correo electrónico" />
            <PasswordField fx:id="contrasenaField" prefHeight="45.0" promptText="Contraseña" />
            <Label fx:id="errorLabel" style="-fx-text-fill: #ef4444; -fx-font-size: 12px;" visible="false" />
            <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" minHeight="45.0" onAction="#onLoginClick" prefHeight="45.0" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" text="Iniciar Sesión" />
            <Button fx:id="registroButton" maxWidth="1.7976931348623157E308" minHeight="45.0" onAction="#onRegistroClick" prefHeight="45.0" style="-fx-background-color: transparent; -fx-text-fill: #2563eb; -fx-border-color: #2563eb; -fx-border-width: 2px; -fx-font-weight: bold;" text="Registrarse" />
         </children>
      </VBox>
      <Button fx:id="volverButton" onAction="#onVolverClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="← Volver al Menú Principal" />
   </children>
</VBox>

